# =============================================
# Satoshi Bets — Environment Variables
# Copy this file to .env and fill in values
# NEVER commit .env to version control
# =============================================

# ---- Backend ----
NODE_ENV=development
PORT=3001

# Stacks Network
STACKS_NETWORK=testnet
# Deployer wallet mnemonic (testnet only — get STX from https://explorer.hiro.so/sandbox/faucet?chain=testnet)
DEPLOYER_MNEMONIC="replace with your twelve word mnemonic phrase here"
# Deployed contract addresses (filled after: clarinet deployments apply --testnet)
MARKET_FACTORY_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM.market-factory
MARKET_AMM_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM.market-amm
ORACLE_REGISTRY_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM.oracle-registry
SBTC_CONTRACT_ADDRESS=ST000000000000000000002AMW42H.sbtc-token

# AI (https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-api03-...

# External APIs
COINGECKO_API_KEY=CG-...
NEWS_API_KEY=...
TWITTER_BEARER_TOKEN=...

# Pyth Network (https://hermes.pyth.network)
PYTH_HERMES_URL=https://hermes.pyth.network
PYTH_BTC_USD_FEED_ID=0xe62df6c8b4a85fe1a67db44dc12de5db330f7ac66b72dc658afedf0f4a415b43
# Set to true to use mock Pyth prices during local development
USE_MOCK_PYTH=false

# Redis (local dev: redis://localhost:6379)
REDIS_URL=redis://localhost:6379

# Admin API key (min 32 chars — generate with: openssl rand -hex 32)
ADMIN_API_KEY=change_me_to_a_32_char_random_string_here

# Market Maker bot wallet (separate from deployer)
MARKET_MAKER_MNEMONIC="replace with market maker wallet mnemonic"
MARKET_MAKER_SEED_AMOUNT=10000000

# ---- Frontend (VITE_ prefix required) ----
VITE_API_URL=http://localhost:3001/api/v1
VITE_STACKS_NETWORK=testnet
VITE_MARKET_FACTORY_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM
VITE_MARKET_FACTORY_NAME=market-factory
VITE_MARKET_AMM_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM
VITE_MARKET_AMM_NAME=market-amm
VITE_ORACLE_REGISTRY_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM
